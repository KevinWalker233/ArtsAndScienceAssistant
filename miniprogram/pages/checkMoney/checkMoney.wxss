.refresh {
  width: 210rpx;
  height: 60rpx;
  color: white;
  font-size: 32rpx;
  position: absolute;
  top: 30rpx;
  right: 4%;
}

.cardContext {
  width: 35%;
  height: 230rpx;
  position: relative;
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* box-shadow: 0 2rpx 20rpx 2rpx rgba(0, 0, 0, 0.3); */
  /* background: linear-gradient(to right bottom, rgb(255, 255, 255), rgb(210, 223, 236)); */
}

.moneyCard {
  text-align: center;
  color: white;
  font-size: 25rpx;
}

.cardStatus {
  width: 55%;
  height: 80rpx;
  position: relative;
  /* top: 80rpx; */
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  font-size: 25rpx;
}

.card {
  width: 50%;
  height: 40rpx;
  margin: auto;
  line-height: 40rpx;
  color: white;
  text-align: center;
}

.money {
  font-size: 60rpx;
  font-weight: bold;
}

.images {
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  float: right;
  top: 170rpx;
  right: 30rpx;
}

.passwordInput {
  width: 70%;
  height: 80rpx;
  margin: 10rpx auto;
  border: 1px solid #444;
  border-radius: 10rpx;
  text-align: center;
  color: #444;
  background-color: white;
}

.pay {
  width: 30%;
  height: 80rpx;
  margin: 15rpx auto;
  text-align: center;
  border-radius: 10rpx;
  background-color: rgb(255, 173, 16);
  font-weight: bold;
  line-height: 80rpx;
  color: white;
}

.context {
  width: 100%;
  /* height: 300rpx; */
  margin: 0rpx auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.column {
  width: 250rpx;
  display: block;
}

.inputTitle {
  width: 90%;
  margin: 0rpx auto;
  color: #444;
}

.dateChoose {
  width: 100%;
  height: 80rpx;
  border: 1px solid #444;
  border-radius: 10rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 35rpx;
  color: #444;
  background-color: white;
}

.picker {
  width: 100%;
  height: 120rpx;
  line-height:120rpx;
  margin: auto;
}

.searchButton {
  /* width: 450rpx; */
  /* height: 80rpx; */
  border-radius: 10rpx;
  text-align: center;
  line-height: 80rpx;
  font-weight: bold;
  margin: 15rpx auto;
  background-color: #3878C2;
  color: white;
}

.box{
  width: 80%;
  height: 200rpx;
}