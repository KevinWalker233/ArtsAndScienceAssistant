/* pages/iexpFunction/concentrat/concentrat.wxss */
.top_nav {
  border-bottom: 1px solid #e6d9af;
}

.nav-name {
  display: inline-block;
  height: 70rpx;
  width: 50%;
  color: #727579;
  line-height: 250%;
  text-align: center;
  font-size: 30rpx;
}

.nav-hover {
  color: #3878C2;
  font-size: 45rpx;
}

/* 专注模块 */
.slider {
  width: 650rpx;
  margin: 100rpx auto 50rpx auto;
}

.task_text {
  height: 150rpx;
  text-align: center;
}

.task_text .task_title {
  font-size: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.task_text .task_desc {
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #999999;
}

.task_cate {
  width: 73%;
  height: 500rpx;
  margin: 30rpx auto;
  display: flex;
  flex-wrap: wrap;
}

.task_cate .cate_item {
  width: 180rpx;
  height: 180rpx;
  margin: 30rpx auto;
}

.task_cate .cate_item .cate_active {
  background-color: #cbcbe0;
  color: #3878C2;
}

.task_cate .cate_item .cate_icon {
  height: 120rpx;
}

.task_cate .cate_item .cate_icon image {
  display: flex;
  align-items: center;
  margin: 0 auto;
  height: 100rpx;
  width: 100rpx;
}

.task_cate .cate_item .cate_text {
  height: 60rpx;
  text-align: center;
  font-size: 30rpx;
}

.startBtn {
  width: 400rpx;
  height: 120rpx;
  margin: 40rpx auto;
  text-align: center;
  border: 3rpx #3878C2 solid;
  color: #3878C2;
  border-radius: 20rpx;
  font-size: 40rpx;
  font-weight: bold;
  line-height: 120rpx;
}

/* 专注模式-开始专注模态框 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.modal-dialog {
  width: 600rpx;
  overflow: hidden;
  position: fixed;
  top: 45%;
  left: 0;
  z-index: 1000;
  margin: 20rpx 70rpx;
}

.modal-content {
  position: fixed;
  top: 15%;
  left: 80rpx;
  z-index: 1500;
  width: 80%;
  height: 65%;
  background: orange;
  border-radius: 10rpx;
}

.model-title {
  margin-top: 50rpx;
  width: 100%;
  height: 100rpx;
  font-size: 60rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgb(110, 73, 73);
}

.model-title2 {
  width: 100%;
  height: 50rpx;
  font-size: 30rpx;
  text-align: center;
  color: rgb(139, 131, 131);
}

.progress {
  width: 400rpx;
  height: 400rpx;
  background: orange;
  margin: 50rpx auto;
  position: relative;
}

.progress_active {
  position: absolute;
  left: 0;
  top: 0;
  width: 400rpx;
  height: 400rpx;
}

.progress_icon {
  position: absolute;
  left: 170rpx;
  top: 120rpx;
  width: 60rpx;
  height: 60rpx;
}

.progress_text {
  width: 120rpx;
  height: 80rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 50rpx;
  font-weight: bold;
  color: #fff;
  position: absolute;
  left: 140rpx;
  top: 200rpx;
}

.pauseBtn {
  width: 80%;
  height: 120rpx;
  margin: 0rpx auto;
  display: flex;
  align-items: center;
  align-self: center;
  justify-content: center;
  color: #fff;
  font-size: 45rpx;
  font-weight: bold;
  border: 3rpx #fff solid;
  border-radius: 10rpx;
}

.handleBtns {
  margin-top: 50rpx;
  display: flex;
  align-self: center;
  align-items: center;
  font-size: 40rpx;
  font-weight: bold;
  justify-content: space-between;
  width: 100%;
  height: 130rpx;
}

.continueBtn {
  margin-left: 50rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 220rpx;
  height: 120rpx;
  border: 3rpx #fff solid;
  border-radius: 10rpx;
}

.cancleBtn {
  margin-right: 50rpx;
  color: #fff;
  width: 220rpx;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 3rpx #fff solid;
  border-radius: 10rpx;
}

/* 统计模块 */
.sum {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  height: 350rpx;
  border-bottom: 10rpx #eeeeee solid;
}

.sum_item {
  margin: 0 auto;
  width: 350rpx;
  height: 175rpx;
  text-align: center;
}

.sum_item_title {
  height: 120rpx;
  line-height: 120rpx;
  font-size: 40rpx;
  color: #75869b;
}

.sum_item_value {
  height: 40rpx;
  line-height: 30rpx;
  font-size: 40rpx;
  color: #3878C2;
}

.detail {
  margin: 0 auto;
  width: 98%;
  height: 500rpx;
}

.detail_title {
  display: flex;
  height: 70rpx;
  font-size: 30rpx;
  line-height: 60rpx;
}

.detail_title_text {
  flex: 1;
  font-size: 40rpx;
  color: #3878C2;
  margin: 10rpx 10rpx 10rpx 10rpx;
}

.detail_title_type {
  flex: 1;
  text-align: right;
  font-size: 25rpx;
}

.detail_title_type text {
  padding: 0 10rpx;
}

.active {
  color: #3878C2;
}

.detail_line {
  width: 100%;
  margin: 0 auto;
  height: 2rpx;
  border: 3rpx #727579 solid;
  border-radius: 2rpx;
}

.list_item {
  margin: 20rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: #727579 1rpx solid;
}

.list_item_data {
  font-size: 35rpx;
  color: #3878C2;
}

.list_item_text {
  margin: 5rpx 5rpx;
  border-radius: 10rpx;
  font-size: 35rpx;
  color: #3878C2;
}

.list_item_time {
  font-size: 35rpx;
  color: #3878C2;
}