.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}

.modalDlg {
  width: 80%;
  height: 70%;
  position: fixed;
  top: 15%;
  left: 10%;
  z-index: 9999;
  margin: auto;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.modalDlg image {
  height: 100px;
  width: 100px;
}

.modalDlg text {
  height: 65%;
  width: 90%;
}

page {
  display: flex;
  flex-direction: column;
  height: 3200px;
  background-color: rgba(238, 238, 238, 1);
}

.card {
  width: 48%;
  background-color: rgb(255, 255, 255);
  margin: 5rpx auto;
  border-radius: 25rpx;
  box-shadow: 0.1rem 0.1rem 1rem rgba(0, 0, 0, 0.15);
}

.info {
  width: 98%;
  margin: 10rpx auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.paihang {
  flex: 1;
  display: flex;
  background: #fff;
  font-size: rpx;
  color: #000000;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  /* height: 1000px; */
  width: 100%;
  text-align: center;
}

.paihang text {
  font-weight: bold;
  font-weight: bolder;
}

.paihang .one {
  height: 180px;
  width: 33%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}

.paihang .one .up {
  height: 100px;
  width: 100px;
  margin: auto;
}

.paihang .one .down {
  height: 20px;
  width: auto;
  margin-inline: 25%;
  color: tomato;
  font-weight: bold;
}

.paihang .one .up image {
  width: 100%;
  height: 100%;
  border-radius: 100%;
}

.paihang .two {
  height: 250px;
  width: 33%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}

.paihang .two .up {
  height: 250rpx;
  width: 250rpx;
  margin: auto;
}

.paihang .two .down {
  width: auto;
  color: gold;
  font-weight: bold;
}

.paihang .two .up image {
  width: 100%;
  height: 100%;
