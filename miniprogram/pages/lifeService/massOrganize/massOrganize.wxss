.navbar {
  flex: none;
  display: flex;
  background: #fff;
  font-size: 30rpx;
  color: #444;
}

.navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 90rpx;
}

.navbar .item.active {
  color: #444;
  font-weight: bold;
}

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  width: 200rpx;
  margin: 0 auto;
  height: 10rpx;
  background: #444;
  opacity: 0.8;
}

.swiper {
  height: 100%
}

.courseitem {
  display: flex;
}

.courseitem.isstar {
  border-bottom-color: #1BA1E2;
}

.courseitem .fm {
  height: 120rpx;
  width: 120rpx;
  margin: 10rpx 30rpx;
  position: relative;
  top: 30rpx;
}

.courseitem .fm image {
  width: 100%;
  height: 100%;
}

.courseitem .desc {
  display: flex;
  flex-direction: column;
  flex: 1;
  padding: 10rpx;
}

.desc text {
  flex-wrap: wrap;
  font-size: 13px;
  display: flex;
}

.desc .first {
  font-size: 30rpx;
  color: #444;
  font-weight: bolder;
}

.desc .second {
  color: #444;
  opacity: 0.9;
  display: flex;
  flex-wrap: wrap;
}

.desc .second .isstar {
  color: tomato;
  font-weight: bold;
}

.desc .third {
  color: #444;
  opacity: 0.9;
}

.fourth {
  color: #444;
  width: 93%;
  font-size: 25rpx;
  margin: auto;
}

