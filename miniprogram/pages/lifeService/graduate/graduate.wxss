page {
  background-color: rgb(231, 231, 231);
}

.bg {
  width: 90vw;
  height: 80vh;
  margin: auto;
  position: fixed;
  left: 0;
  right: 0;
  top: -100rpx;
  bottom: 0;
  margin: auto;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0rpx 0rpx 20rpx 5rpx rgb(200,200,200);
  background-color: rgb(246,246,246);
}

.circle {
  background: linear-gradient(to right, rgba(255, 255, 255, .05), rgba(237, 237, 237, 1));
  border-radius: 50%;
}

.circle-1 {
  height: 250px;
  width: 250px;
  position: absolute;
  top: 80px;
  left: 50px;
}

.circle-2 {
  height: 150px;
  width: 150px;
  position: absolute;
  top: 220px;
  left: 200px;
}

.circle-3 {
  height: 250px;
  width: 250px;
  position: absolute;
  top: 540px;
  left: -100px;
}

.circle-4 {
  height: 100px;
  width: 100px;
  position: absolute;
  top: 380px;
  left: 50px;
}

.title{
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  margin: auto;
  margin-top: 30rpx;
  font-size: 35rpx;
  font-weight: bold;
  position: relative;
}

.text{
  width: 85%;
  height: 50%;
  margin: auto;
  color: #444;
  font-size: 25rpx;
  position: relative;
  /* line-height: 40rpx; */
  /* background-color: pink; */
}

.titleB{
  width: 80%;
  height: 5%;
  line-height: 50rpx;
  margin: auto;
  position: relative;
  margin-top: 10rpx;
  font-size: 30rpx;
  font-weight: bold;
  text-align: right;
  color: #444;
}

.send{
  width: 250rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin: auto;
  margin-top: 30rpx;
  position: relative;
  border-radius: 10rpx;
  color: rgb(225,87,91);
  font-weight: bold;
  border: 5rpx solid rgb(225,87,91);
}

.tip{
  width: 100%;
  height: 30rpx;
  margin: auto;
  text-align: center;
  position: relative;
  font-size: 18rpx;
  line-height: 30rpx;
  top: 10rpx;
  color: #444;
  /* background-color: pink; */
}