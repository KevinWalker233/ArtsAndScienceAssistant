page {
  background-color: rgb(240, 240, 240);
}

.headH {
  display: flex;
  justify-content: space-between;
}

.head {
  width: 200rpx;
  height: 50rpx;
  line-height: 70rpx;
  color: #444;
  font-size: 22rpx;
  position: relative;
  right: 3%;
}

.tableContext {
  width: 250%;
}

.tableHead {
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: space-around;
  background-color: #3878C2;
}

.gradeBox {
  width: 100%;
  display: flex;
  justify-content: space-around;
}

.resultBox {
  width: 100rpx;
  height: 85rpx;
  font-size: 18rpx;
  white-space: pre-wrap;
  word-break: break-all;
  text-align: center;
}

.headContext {
  width: 95%;
  height: 420rpx;
  margin: auto;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  background-color: white;
  border-radius: 20rpx;
}

.context {
  width: 95%;
  margin: auto;
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
}

.circleContext {
  text-align: center;
  color: #444;
  font-size: 20rpx;
}

.gradesTable {
  display: flex;
  flex-direction: column;
  width: 93%;
  margin: auto;
  background-color: white;
  border-radius: 20rpx;
}

.boxTitle {
  width: 30%;
  height: 70rpx;
  line-height: 70rpx;
  color: #444;
  font-size: 22rpx;
  position: relative;
  left: 3%;
}

.gradesBox {
  width: 95%;
  height: 120rpx;
  background-color: rgb(80, 130, 170);
  box-shadow: 0 5rpx 15rpx 2rpx rgba(100, 100, 100, 0.3);
  margin: 8rpx auto;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-around;
}

.box {
  line-height: 120rpx;
  font-size: 28rpx;
  color: rgb(242, 212, 163);
  font-weight: bold;
  align-items: center;
  display: -webkit-box;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.clickContext {
  width: 93%;
  height: 100rpx;
  background-color: white;
  margin: 20rpx auto;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-around;
}

.tableBox {
  width: 40%;
  height: 100%;
  font-size: 25rpx;
  line-height: 100rpx;
  text-align: center;
  color: #444;
}

@import 'checkGrades-wxa-auto-dark.wxss'