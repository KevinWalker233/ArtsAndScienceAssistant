.flex-item {
  width: 12.3%;
  height: 190rpx;
  transition: width 2s;
}

.kcb-item {
  position: absolute;
  justify-content: center;
  display: flex;
  border-radius: 10rpx;
}

.smalltext {
  font-size: 17rpx;
  color: #fff;
  padding-left: 5rpx;
  padding-right: 5rpx;
  padding-top: 10rpx;
}

.top {
  width: 91%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left: 9%;
  color: rgb(29, 29, 29);
}

.top-text {
  width: 15%;
  height: 35rpx;
  font-size: 7pt;
  justify-content: center;
  display: flex;
  align-items: center;
}

.scroll {
  height: 1050rpx;
  z-index: 101;
}

.left {
  width: 100%;
  height: 100rpx;
  font-size: 6pt;
  justify-content: center;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.kbtext-style {
  position: relative;
}
.kbtext-Split {
  border: 1px rgb(75, 86, 122) solid;
}
.kbaddress-style {
  position: relative;
}

.schoolCalendar {
  width: 100%;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.mouseHead {
  width: 95%;
  height: 100rpx;
  display: flex;
  margin: 0 auto;
}

.calendar {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.mouthC {
  position: relative;
  margin: 7rpx;
  width: 31%;
  height: 300rpx;
}

.mouseBottom {
  width: 100%;
  height: 300rpx;
  margin: 5rpx;
}

.head {
  width: 100%;
  height: 50rpx;
  margin: 0 auto;
  position: relative;
  z-index: 100;
  display: flex;
  justify-content: space-between;
  background-color: white;
}

.login {
  width: 220rpx;
  font-size: 20rpx;
  line-height: 50rpx;
}