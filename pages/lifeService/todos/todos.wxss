/* pages/lifeService/todos/todos.wxss */
page{
  background: #3878C2;
}
.container{
  background: #3878C2;
}

.header{
  display: flex;
  margin: -100rpx 20rpx 50rpx 20rpx;
  background-color:#eeeeee;
  border: 1rpx solid #e0e0e0 ;
  border-radius: 15rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  padding: 20rpx;
}
.header image{
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-self: center;
  margin-right: 20rpx;
}
.header textarea {
  width: 580rpx;
  /* height: 50rpx; */
  overflow: hidden;
}
.todos{
  margin: 20rpx;
  width: 90%;
  border: 1rpx solid #e0e0e0 ;
  border-radius: 5rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
}

.todos .item{
  display: flex;
  padding: 20rpx;
  background-color:#eeeeee;
  border-bottom: 1rpx solid #e0e0e0;

  align-items: center;
}
.todos .item text{
  flex: 1;
  width: 550rpx;
  font-size: 30rpx; 
  color: #444;
  margin: 0rpx 10rpx;
}
.todos .item.completed text{
  color:#888;
  text-decoration-line: line-through;
}
.todo-item-content {
  display: flex;
  flex-direction: column;
}
.todo-time {
  height: 5rpx;
  width: 100%;
  color: #444;
  font-size: 15rpx;
  text-align: right;
}

.null{
  background: #eeeeee;
  width: 700rpx;
  height: 700rpx;
  margin: auto;
  border-radius: 10rpx;
}

.null-content {
  width: 90%;
  height: 600rpx;
  margin: 50rpx auto;
}
.null-content-title {
  height: 60rpx;
  width: 100%;
  font: 1.2em sans-serif;
  font-weight: bold;
  color: rgb(114, 114, 114);
  text-align: center;
}
.nulll-content-line{
  width: 100%;
  height: 3rpx;
  margin: 20rpx 0rpx;
  border-radius: 2rpx;
  background-color: brown;
}
.null-text {
  height: 60rpx;
  margin: 10rpx auto;
  display: flex;
  align-items: center;
  width: 95%;
  font: 1em sans-serif;
  color: rgb(90, 90, 90);
}

.footer{
  width: 80%;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  margin-top: 50rpx;
  display: flex;
  align-content: center;
  flex-direction: column;
}
.footer-clear-btn {
  /* position: absolute;
  left: 25%;
  bottom: 300rpx; */
  border: 1rpx red solid;
  color: rgb(168, 101, 101);
}
.btn-hover{
  position: relative;
  top: 3rpx;
  box-shadow:0px 0px 8px #999 inset; 
}
/* 镂空按钮 点击阴影不宜太深 */
.plain-hover{
  position: relative;
  top: 3rpx;
  box-shadow:0px 0px 10px #bbbec4 inset; 
}

