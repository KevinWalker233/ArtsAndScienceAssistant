/* pages/application/application.wxss */
.function {
  margin: 20rpx auto;
  width: 95%;
  height: 250rpx;
  background-color: white;
  box-shadow: 2rpx 2rpx 2rpx 2rpx #8888;
  border-radius: 6rpx;
  margin-bottom: 30rpx;
}
.function_top {
  width: 100%;
  height: 70rpx;
  display: flex;
  align-self: center;
 }
 .function_top_line {
   height: 60%;
   width: 6rpx;
   border-radius: 2rpx;
   display: flex;
   align-self: center;
   justify-content: center;
   margin-left: 30rpx;
   background-color: green;
 }
 .function_top_text {
   height: 100%;
   width: 100%;
   display: flex;
   align-items: center;
   margin-left: 20rpx;
   font-size: 30rpx;
   font-weight: normal;
 }
 .function_centerLine {
   height: 3rpx;
   width: 100%;
   margin: 0 auto;
   background-color: rgba(204, 204, 204, 0.533);
 }
 .function_content {
   width: 80%;
   height: 177rpx;
   display: flex;
   margin: 5rpx auto;
   align-self: center;
   align-items: center;
   justify-content: space-between;
 }
 .function_content_icon {
  height:56rpx;
  width:56rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
 }
 .function_content_text {
   font-size: 25rpx;
   text-align: center;
   
 }